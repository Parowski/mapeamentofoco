# Endpoints e versão
# Ajuste conforme seu ambiente FOCO (produção/homologação)
FOCO_BASE_URL=https://seu-dominio-foco/services/data
FOCO_LOGIN_URL=https://seu-dominio-foco/services/oauth2/token
FOCO_API_VERSION=62.0

# Credenciais (nunca publique estes valores)
FOCO_CLIENT_ID=<SEU_CLIENT_ID>
FOCO_CLIENT_SECRET=<SEU_CLIENT_SECRET>

# Fluxo OAuth2 (padrão recomendado: client_credentials)
FOCO_GRANT_TYPE=client_credentials

# Para fluxos que exigem usuário/senha (opcional)
FOCO_USERNAME=<SEU_USUARIO_SF>
FOCO_PASSWORD=<SUA_SENHA_SF>
# Opcional (caso necessário no fluxo password)
FOCO_SECURITY_TOKEN=

# Link da documentação exibido no topo e em Query (opcional)
FOCO_DOCS_URL=https://exemplo-docs.local/